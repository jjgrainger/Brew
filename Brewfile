# Configure where our applications go
cask_args appdir: '/Applications'

# install scripts we want
brew 'wget'
brew 'git'
brew 'hub'
brew 'heroku-toolbelt'
brew 'node'

# get brew cask for apps
tap 'caskroom/cask'

# install the apps we want
cask 'sublime-text'
cask 'google-chrome'
cask 'iterm2'
cask 'alfred'
cask 'dropbox'
cask 'spotify'
cask 'flux'
cask 'caffeine'
cask 'slack'
